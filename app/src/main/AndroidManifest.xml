<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ymq.badminton_rank"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${CHANNEL_VALUE}"/>
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MatchActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.ResultActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.DoubleMatchActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.HistoryGameActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.BaseActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.ScoreActivity" android:screenOrientation="portrait">
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>